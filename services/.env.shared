# Shared Environment Variables
# Managed by Services Coordinator Agent
# These variables are used across multiple services

# ======================
# SERVICE DISCOVERY
# ======================
IDENTITY_SERVICE_URL=http://identity-service:8001
CONTENT_SERVICE_URL=http://content-service:8002
COMMUNICATION_SERVICE_URL=http://communication-service:8003
WORKFLOW_SERVICE_URL=http://workflow-service:8004

# ======================
# JWT CONFIGURATION (Shared across all services)
# ======================
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7
# JWT_SECRET_KEY should be set individually per service for security

# ======================
# LOGGING & MONITORING
# ======================
LOG_LEVEL=INFO
LOG_FORMAT=json
TRACE_ENABLED=true
METRICS_ENABLED=true

# ======================
# DATABASE CONFIGURATION PATTERNS
# ======================
# Each service uses its own database following this pattern:
# DATABASE_URL=postgresql+asyncpg://service_user:service_pass@service-db:5432/service_database
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_ECHO=false

# ======================
# REDIS CONFIGURATION PATTERNS  
# ======================
# Each service uses its own Redis instance following this pattern:
# REDIS_URL=redis://service-redis:6379/0
REDIS_MAX_CONNECTIONS=10
REDIS_SOCKET_TIMEOUT=5
REDIS_SOCKET_CONNECT_TIMEOUT=5

# ======================
# API CONFIGURATION
# ======================
API_VERSION=v1
API_TITLE_SUFFIX=" - ReactDjango Hub"
API_DESCRIPTION_SUFFIX=" microservice for ReactDjango Hub platform"

# ======================
# CORS CONFIGURATION
# ======================
CORS_ALLOW_ORIGINS=["http://localhost:3000", "http://localhost:5173"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# ======================
# DEVELOPMENT FLAGS
# ======================
DEBUG=false
DEVELOPMENT_MODE=true
AUTO_RELOAD=true

# ======================
# SECURITY HEADERS
# ======================
SECURE_HEADERS_ENABLED=true
RATE_LIMITING_ENABLED=true
DEFAULT_RATE_LIMIT="100/minute"

# ======================
# EXTERNAL SERVICES (Optional)
# ======================
# These are shared when multiple services need the same external service
# EMAIL_PROVIDER=sendgrid
# SMS_PROVIDER=twilio  
# AI_PROVIDER=anthropic
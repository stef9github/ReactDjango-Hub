# Local Development Environment Variables
# Used by docker-compose.local.yml for all microservices

# ===========================================
# SHARED CONFIGURATION
# ===========================================
DEBUG=true
LOG_LEVEL=info
ENVIRONMENT=development

# Security keys (development only - change for production)
SECRET_KEY=dev-secret-key-change-in-production
JWT_SECRET_KEY=dev-jwt-secret-key-change-in-production

# ===========================================
# SERVICE DISCOVERY URLS
# ===========================================
IDENTITY_SERVICE_URL=http://identity-service:8001
COMMUNICATION_SERVICE_URL=http://communication-service:8002  
CONTENT_SERVICE_URL=http://content-service:8003
WORKFLOW_SERVICE_URL=http://workflow-intelligence-service:8004
BACKEND_SERVICE_URL=http://backend:8000
FRONTEND_URL=http://frontend:3000

# External URLs for client-side access
IDENTITY_SERVICE_EXTERNAL_URL=http://localhost:8001
COMMUNICATION_SERVICE_EXTERNAL_URL=http://localhost:8002
CONTENT_SERVICE_EXTERNAL_URL=http://localhost:8003
WORKFLOW_SERVICE_EXTERNAL_URL=http://localhost:8004
BACKEND_EXTERNAL_URL=http://localhost:8000
FRONTEND_EXTERNAL_URL=http://localhost:3000

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# Main Django Database
MAIN_DATABASE_URL=postgresql://postgres:postgres@main-db:5432/reactdjango_hub

# Identity Service Database
IDENTITY_DATABASE_URL=postgresql://identity_user:identity_pass@identity-db:5432/identity_service

# Communication Service Database  
COMMUNICATION_DATABASE_URL=postgresql://comm_user:comm_pass@communication-db:5432/communication_service

# Content Service Database
CONTENT_DATABASE_URL=postgresql://content_user:content_pass@content-db:5432/content_service

# Workflow Service Database
WORKFLOW_DATABASE_URL=postgresql://workflow_user:workflow_pass@workflow-db:5432/workflow_service

# ===========================================
# REDIS CONFIGURATION
# ===========================================
# Main Redis
MAIN_REDIS_URL=redis://main-redis:6379/0

# Identity Service Redis
IDENTITY_REDIS_URL=redis://identity-redis:6379/0

# Communication Service Redis
COMMUNICATION_REDIS_URL=redis://communication-redis:6379/0
COMMUNICATION_CELERY_BROKER_URL=redis://communication-redis:6379/1

# Content Service Redis
CONTENT_REDIS_URL=redis://content-redis:6379/0

# Workflow Service Redis  
WORKFLOW_REDIS_URL=redis://workflow-redis:6379/0
WORKFLOW_CELERY_BROKER_URL=redis://workflow-redis:6379/1

# ===========================================
# OBJECT STORAGE (MinIO)
# ===========================================
MINIO_URL=http://minio:9000
MINIO_EXTERNAL_URL=http://localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=content-storage

# ===========================================
# FRONTEND CONFIGURATION
# ===========================================
VITE_API_URL=http://localhost:8000
VITE_IDENTITY_SERVICE_URL=http://localhost:8001
VITE_ENVIRONMENT=development
CHOKIDAR_USEPOLLING=true

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000,http://127.0.0.1:5173
ALLOWED_HOSTS=localhost,127.0.0.1,backend,frontend,identity-service,communication-service,content-service,workflow-intelligence-service

# ===========================================
# EXTERNAL SERVICE CONFIGURATION
# ===========================================
# Email Configuration (for development - use MailHog or similar)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_USE_TLS=false

# Twilio (for SMS - optional for development)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# OpenAI API (for AI features - optional)
OPENAI_API_KEY=

# ===========================================
# HEALTH CHECK CONFIGURATION
# ===========================================
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=5
HEALTH_CHECK_START_PERIOD=60

# ===========================================
# DEVELOPMENT FLAGS
# ===========================================
# Enable SQL query logging
SQL_DEBUG=false

# Enable detailed error pages
DEBUG_TOOLBAR=true

# Hot reload for development
AUTO_RELOAD=true
RELOAD_ON_CHANGE=true
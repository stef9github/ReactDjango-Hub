# Environment Configuration for ReactDjango Hub Frontend

# Authentication Service API
VITE_AUTH_API_URL=http://localhost:8001

# GraphQL API (for Django backend)
VITE_GRAPHQL_URL=http://localhost:8000/graphql

# Application Environment
VITE_APP_ENV=development

# Theme Configuration
VITE_DEFAULT_THEME=default
VITE_DEFAULT_COLOR_MODE=system

# Feature Flags
VITE_ENABLE_REGISTRATION=true
VITE_ENABLE_PASSWORD_RESET=true
VITE_REQUIRE_EMAIL_VERIFICATION=true
VITE_REQUIRE_PHONE_NUMBER=false
VITE_SHOW_PASSWORD_STRENGTH=true

# Debug Settings
VITE_DEBUG_API_CALLS=false
VITE_DEBUG_THEME_SYSTEM=false
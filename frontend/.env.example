# Environment Configuration for ReactDjango Hub Frontend

# Kong API Gateway (Primary API endpoint)
VITE_API_URL=http://localhost:8080
VITE_KONG_URL=http://localhost:8080

# Individual Service APIs (for direct access if needed)
VITE_AUTH_API_URL=http://localhost:8001
VITE_CONTENT_API_URL=http://localhost:8002
VITE_COMMUNICATION_API_URL=http://localhost:8003
VITE_WORKFLOW_API_URL=http://localhost:8004

# GraphQL API (Django backend via Kong)
VITE_GRAPHQL_URL=http://localhost:8080/graphql

# Application Environment
VITE_APP_ENV=development

# Theme Configuration
VITE_DEFAULT_THEME=default
VITE_DEFAULT_COLOR_MODE=system

# Feature Flags
VITE_ENABLE_REGISTRATION=true
VITE_ENABLE_PASSWORD_RESET=true
VITE_REQUIRE_EMAIL_VERIFICATION=true
VITE_REQUIRE_PHONE_NUMBER=false
VITE_SHOW_PASSWORD_STRENGTH=true

# Debug Settings
VITE_DEBUG_API_CALLS=false
VITE_DEBUG_THEME_SYSTEM=false